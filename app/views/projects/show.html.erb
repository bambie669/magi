<% content_for :page_title, "Project: #{@project.name}" %>

<% content_for :breadcrumbs do %>
  <%= link_to "Projects", projects_path, class: "text-primary hover:text-primary/80" %>
  <span class="text-text-muted mx-2">/</span>
  <span class="text-text-muted"><%= @project.name %></span>
<% end %>

<div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
  <!-- Main Content -->
  <div class="lg:col-span-3 space-y-6">
    <!-- Project Description -->
    <% if @project.description.present? %>
      <div class="panel">
        <div class="panel-header">Description</div>
        <div class="p-6">
          <p class="text-text-primary/80 font-mono text-sm"><%= @project.description %></p>
        </div>
      </div>
    <% end %>

    <!-- Test Suites Section -->
    <div class="panel">
      <div class="panel-header flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <span>Test Suites</span>
          <div class="h-3 w-px bg-dark-border"></div>
          <span class="text-[10px] font-mono text-primary"><%= @pagy_suites.count %> Suites</span>
        </div>
        <% if policy(TestSuite.new(project: @project)).new? %>
          <%= link_to new_project_test_suite_path(@project), class: "btn-primary flex items-center space-x-2 py-1.5" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
            <span>New Test Suite</span>
          <% end %>
        <% end %>
      </div>

      <% if @test_suites.any? %>
        <div class="divide-y divide-dark-border">
          <% @test_suites.each do |suite| %>
            <div class="p-4 hover:bg-dark-hover transition-colors group">
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-3">
                  <span class="w-2 h-2 bg-primary rounded-full group-hover:animate-pulse"></span>
                  <%= link_to suite.name, test_suite_path(suite), class: "text-sm font-mono text-text-primary hover:text-primary transition-colors" %>
                  <span class="text-[10px] font-mono text-text-muted uppercase tracking-wider">
                    <%= pluralize(suite.test_cases_count, 'test case') %>
                  </span>
                </div>
                <%= link_to test_suite_path(suite), class: "p-2 border border-primary/30 text-primary hover:bg-primary/10 transition-colors opacity-0 group-hover:opacity-100" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        <%= render 'shared/pagination', pagy: @pagy_suites %>
      <% else %>
        <div class="p-8 text-center">
          <p class="text-sm font-mono text-text-muted uppercase tracking-wider">No test suites yet</p>
          <% if policy(TestSuite.new(project: @project)).new? %>
            <%= link_to "Create Test Suite", new_project_test_suite_path(@project), class: "text-primary hover:text-primary/80 text-sm font-mono" %>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Test Runs Section -->
    <div class="panel">
      <div class="panel-header flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <span>Test Runs</span>
          <div class="h-3 w-px bg-dark-border"></div>
          <span class="text-[10px] font-mono text-primary"><%= @pagy_runs.count %> Runs</span>
        </div>
        <% if policy(TestRun.new(project: @project)).new? %>
          <%= link_to new_project_test_run_path(@project), class: "btn-primary flex items-center space-x-2 py-1.5" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
            <span>New Test Run</span>
          <% end %>
        <% end %>
      </div>

      <% if @test_runs.any? %>
        <div class="divide-y divide-dark-border">
          <% @test_runs.each do |run| %>
            <% has_failures = run.failed_cases > 0 %>
            <div class="p-4 hover:bg-dark-hover transition-colors group <%= has_failures ? 'border-l-2 border-status-error' : '' %>">
              <div class="flex items-center justify-between">
                <div class="flex-1">
                  <%= link_to run.name, test_run_path(run), class: "text-sm font-mono text-text-primary hover:text-primary transition-colors" %>
                  <div class="flex items-center mt-2 space-x-4">
                    <div class="flex-1 max-w-xs progress-bar h-1.5">
                      <div class="progress-bar-fill h-1.5 <%= has_failures ? 'critical' : '' %>" style="width: <%= run.completion_percentage %>%"></div>
                    </div>
                    <span class="text-xs font-mono <%= run.completion_percentage == 100 ? 'text-status-success' : 'text-primary' %>"><%= run.completion_percentage %>%</span>
                    <div class="flex items-center space-x-3 text-[10px] font-mono uppercase">
                      <span class="text-status-success"><%= run.passed_cases %> passed</span>
                      <% if has_failures %>
                        <span class="text-status-error animate-pulse"><%= run.failed_cases %> failed</span>
                      <% end %>
                    </div>
                  </div>
                </div>
                <%= link_to test_run_path(run), class: "p-2 border border-primary/30 text-primary hover:bg-primary/10 transition-colors opacity-0 group-hover:opacity-100 ml-4" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        <%= render 'shared/pagination', pagy: @pagy_runs %>
      <% else %>
        <div class="p-8 text-center">
          <p class="text-sm font-mono text-text-muted uppercase tracking-wider">No test runs yet</p>
          <% if policy(TestRun.new(project: @project)).new? %>
            <%= link_to "Create Test Run", new_project_test_run_path(@project), class: "text-primary hover:text-primary/80 text-sm font-mono" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Sidebar -->
  <div class="space-y-6">
    <!-- Project Details -->
    <div class="panel">
      <div class="panel-header">Project Details</div>
      <div class="p-4 space-y-4">
        <dl class="space-y-3 text-sm font-mono">
          <div class="flex justify-between">
            <dt class="text-text-muted uppercase text-[10px] tracking-wider">Owner</dt>
            <dd class="text-text-primary"><%= @project.user&.display_name || 'N/A' %></dd>
          </div>
          <div class="flex justify-between">
            <dt class="text-text-muted uppercase text-[10px] tracking-wider">Created</dt>
            <dd class="text-text-primary"><%= @project.created_at.strftime('%Y.%m.%d') %></dd>
          </div>
          <div class="flex justify-between">
            <dt class="text-text-muted uppercase text-[10px] tracking-wider">Test Suites</dt>
            <dd class="text-primary"><%= @pagy_suites.count %></dd>
          </div>
          <div class="flex justify-between">
            <dt class="text-text-muted uppercase text-[10px] tracking-wider">Test Runs</dt>
            <dd class="text-primary"><%= @pagy_runs.count %></dd>
          </div>
        </dl>

        <!-- Action Buttons -->
        <div class="pt-4 border-t border-dark-border space-y-2">
          <% if policy(@project).edit? %>
            <%= link_to edit_project_path(@project), class: "flex items-center justify-center w-full px-4 py-2 bg-dark-surface border border-primary/30 text-primary text-xs font-mono uppercase tracking-wider hover:bg-primary/10 transition-colors rounded" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
              </svg>
              Edit Project
            <% end %>
          <% end %>
          <% if policy(@project).destroy? %>
            <%= button_to project_path(@project), method: :delete, data: { confirm: 'Delete this project? All associated data will be removed.' }, class: "flex items-center justify-center w-full px-4 py-2 bg-status-error/10 border border-status-error/50 text-status-error text-xs font-mono uppercase tracking-wider hover:bg-status-error/20 transition-colors rounded" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
              </svg>
              Delete Project
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Milestones -->
    <div class="panel">
      <div class="panel-header flex items-center justify-between">
        <span>Milestones</span>
        <% if policy(Milestone.new(project: @project)).new? %>
          <%= link_to new_project_milestone_path(@project), class: "text-primary hover:text-primary/80" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
          <% end %>
        <% end %>
      </div>
      <div class="p-4">
        <% if @milestones.any? %>
          <div class="space-y-3">
            <% @milestones.each do |milestone| %>
              <% is_urgent = milestone.due_date < 7.days.from_now %>
              <div class="p-3 bg-dark-base/30 border <%= is_urgent ? 'border-status-error/50' : 'border-primary/20' %> rounded">
                <div class="flex items-center justify-between mb-2">
                  <span class="text-sm font-mono text-text-primary"><%= milestone.name %></span>
                  <div class="flex items-center space-x-1">
                    <% if policy(milestone).edit? %>
                      <%= link_to edit_milestone_path(milestone), class: "p-1 text-text-muted hover:text-status-warning transition-colors" do %>
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                        </svg>
                      <% end %>
                    <% end %>
                    <% if policy(milestone).destroy? %>
                      <%= button_to milestone_path(milestone), method: :delete, data: { confirm: 'Delete milestone?' }, class: "p-1 text-text-muted hover:text-status-error transition-colors" do %>
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                      <% end %>
                    <% end %>
                  </div>
                </div>
                <div class="flex items-center space-x-2">
                  <span class="w-2 h-2 rounded-full <%= is_urgent ? 'bg-status-error animate-pulse' : 'bg-status-warning' %>"></span>
                  <span class="text-[10px] font-mono <%= is_urgent ? 'text-status-error' : 'text-text-muted' %> uppercase tracking-wider">
                    Due: <%= milestone.due_date.strftime('%Y.%m.%d') %>
                  </span>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-sm font-mono text-text-muted text-center py-4 uppercase tracking-wider">No milestones set</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
