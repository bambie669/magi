<%# locals: (milestone:, project: nil) %>
<% url = milestone.persisted? ? milestone_path(milestone) : project_milestones_path(project) %>
<% the_project = milestone.persisted? ? milestone.project : project %>

<div class="panel">
  <div class="panel-header flex items-center justify-between">
    <span><%= milestone.persisted? ? 'MODIFY DEADLINE' : 'INITIALIZE DEADLINE' %></span>
    <span class="text-[10px] font-mono text-primary">Mission: <%= the_project.name %></span>
  </div>

  <div class="p-6">
    <%= form_with(model: milestone, url: url, class: "space-y-6") do |form| %>
      <% if milestone.errors.any? %>
        <div class="p-4 bg-status-error/10 border border-status-error/50 text-status-error font-mono text-sm animate-pulse" role="alert">
          <div class="flex items-center space-x-2 mb-2">
            <span class="w-2 h-2 bg-status-error rounded-full"></span>
            <span class="uppercase tracking-wider text-xs">System Error:</span>
          </div>
          <strong class="font-bold"><%= pluralize(milestone.errors.count, "error") %> prohibited this deadline from being saved:</strong>
          <ul class="mt-2 list-disc list-inside text-sm">
            <% milestone.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :name, "Deadline Designation", class: "block text-[10px] font-mono text-status-warning uppercase tracking-wider mb-2" %>
        <%= form.text_field :name, class: "input-field w-full px-4 py-3 text-sm", placeholder: "Enter deadline designation..." %>
      </div>

      <div>
        <%= form.label :due_date, "Target Date", class: "block text-[10px] font-mono text-status-warning uppercase tracking-wider mb-2" %>
        <%= form.date_field :due_date, class: "input-field w-full px-4 py-3 text-sm" %>
        <p class="mt-1 text-[10px] font-mono text-text-muted">Deadline target completion date</p>
      </div>

      <div class="flex justify-end space-x-3 pt-6 border-t border-status-error/20">
        <%= link_to 'Abort', project_path(the_project), class: "px-4 py-2 bg-dark-surface-mid border border-text-muted-dark text-text-muted text-xs font-mono uppercase tracking-wider hover:text-theme-primary transition-colors" %>
        <%= form.submit milestone.persisted? ? 'Update Deadline' : 'Initialize Deadline', class: "btn-primary cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
