<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">New Test Run for Project: <%= @project.name %></h1>

  <%= form_with(model: [@project, @test_run], class: "bg-white p-6 rounded-lg shadow") do |form| %>
    <% if @test_run.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
        <strong class="font-bold">Error!</strong>
        <span class="block sm:inline"><%= @test_run.errors.full_messages.join(', ') %></span> <%# Added error message display %>
      </div>
    <% end %>

    <%# Name Field %>
    <div class="mb-4">
      <%= form.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div> <%# Added missing closing div %>

    <%# Test Case Selection %>
    <div class="mb-6">
      <p class="block text-gray-700 text-sm font-bold mb-2">Select Test Cases to Include:</p>
      <div class="max-h-60 overflow-y-auto border rounded p-3 bg-gray-50">
        <% if @available_test_cases.any? %>
          <%= form.collection_check_boxes :test_case_ids, @available_test_cases, :id, :title do |b| %> <%# Changed :name to :title %>
            <div class="flex items-center mb-2">
              <%= b.check_box class: "h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
              <%= b.label class: "ml-2 block text-sm text-gray-900" %>
            </div>
          <% end %>
        <% else %>
          <p class="text-gray-500 text-sm">No test cases found in this project.</p>
        <% end %>
      </div>
    </div>

    <%# Submit and Cancel Buttons %>
    <div class="flex items-center justify-between">
      <%= form.submit "Create Test Run", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer" %>
      <%= link_to 'Cancel', project_path(@project), class: "inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" %>
    </div>
  <% end %>
</div>