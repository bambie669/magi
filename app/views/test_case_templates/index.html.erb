<% content_for :page_title, "PROTOCOL TEMPLATES" %>

<% content_for :breadcrumbs do %>
  <%= link_to @project.name, project_path(@project), class: "text-primary hover:text-primary/80" %>
  <span class="text-status-error mx-2">/</span>
  <span class="text-text-muted">Templates</span>
<% end %>

<div class="panel">
  <div class="panel-header flex items-center justify-between">
    <div class="flex items-center space-x-4">
      <span>PROTOCOL TEMPLATES</span>
      <div class="h-3 w-px bg-status-error/30"></div>
      <span class="text-[10px] font-mono text-primary"><%= @templates.count %> Templates</span>
    </div>
    <% if policy(@project).update? %>
      <%= link_to new_project_test_case_template_path(@project), class: "btn-secondary text-xs" do %>
        <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Initialize Template
      <% end %>
    <% end %>
  </div>

  <% if @templates.any? %>
    <div class="divide-y divide-status-error/10">
      <% @templates.each do |template| %>
        <div class="p-4 hover:bg-dark-surface-mid/50 transition-colors">
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <div class="flex items-center space-x-3 mb-2">
                <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                <h3 class="text-sm font-mono text-text-primary uppercase tracking-wider"><%= template.name %></h3>
              </div>

              <% if template.description.present? %>
                <p class="text-xs font-mono text-text-muted mb-2 line-clamp-2"><%= template.description %></p>
              <% end %>

              <div class="flex items-center space-x-4 text-[10px] font-mono text-text-muted">
                <span>Created by <%= template.user.display_name %></span>
                <span><%= template.created_at.strftime('%Y.%m.%d') %></span>
              </div>
            </div>

            <div class="flex items-center space-x-2">
              <%= link_to project_test_case_template_path(@project, template), class: "p-2 text-text-muted hover:text-primary transition-colors", title: "View" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                </svg>
              <% end %>
              <% if policy(@project).update? %>
                <%= link_to edit_project_test_case_template_path(@project, template), class: "p-2 text-text-muted hover:text-status-warning transition-colors", title: "Edit" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                <% end %>
                <%= button_to project_test_case_template_path(@project, template), method: :delete, data: { confirm: 'Terminate this template?' }, class: "p-2 text-text-muted hover:text-status-error transition-colors", title: "Delete" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="p-8 text-center">
      <svg class="w-12 h-12 mx-auto text-text-muted/50 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
      </svg>
      <p class="text-text-muted font-mono text-sm uppercase tracking-wider">No templates defined</p>
      <p class="text-text-muted/60 font-mono text-xs mt-1">Create templates for reusable protocol structures</p>
      <% if policy(@project).update? %>
        <%= link_to new_project_test_case_template_path(@project), class: "inline-block mt-4 btn-secondary text-xs" do %>
          Initialize First Template
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
