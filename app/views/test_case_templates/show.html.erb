<% content_for :page_title, "TEMPLATE: #{@template.name.upcase}" %>

<% content_for :breadcrumbs do %>
  <%= link_to @project.name, project_path(@project), class: "text-primary hover:text-primary/80" %>
  <span class="text-status-error mx-2">/</span>
  <%= link_to "Templates", project_test_case_templates_path(@project), class: "text-primary hover:text-primary/80" %>
  <span class="text-status-error mx-2">/</span>
  <span class="text-text-muted"><%= @template.name %></span>
<% end %>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <!-- Main Content -->
  <div class="lg:col-span-2 space-y-6">
    <div class="panel">
      <div class="panel-header flex items-center justify-between">
        <span>Template Definition</span>
        <span class="text-[10px] font-mono text-primary uppercase tracking-wider">Reusable Protocol</span>
      </div>
      <div class="p-6 space-y-6">
        <% if @template.description.present? %>
          <div>
            <h3 class="text-[10px] font-mono text-text-muted uppercase tracking-widest mb-2">Description</h3>
            <p class="text-sm font-mono text-text-primary/90"><%= @template.description %></p>
          </div>
        <% end %>

        <% if @template.preconditions.present? %>
          <div>
            <h3 class="text-[10px] font-mono text-text-muted uppercase tracking-widest mb-2">Preconditions</h3>
            <div class="bg-dark-base/50 border border-text-muted-dark/30 p-4 rounded">
              <pre class="text-sm font-mono text-text-primary/90 whitespace-pre-wrap"><%= @template.preconditions %></pre>
            </div>
          </div>
        <% end %>

        <% if @template.steps.present? %>
          <div>
            <h3 class="text-[10px] font-mono text-text-muted uppercase tracking-widest mb-2">Execution Steps</h3>
            <div class="bg-dark-base/50 border border-text-muted-dark/30 p-4 rounded">
              <pre class="text-sm font-mono text-text-primary/90 whitespace-pre-wrap"><%= @template.steps %></pre>
            </div>
          </div>
        <% end %>

        <% if @template.expected_result.present? %>
          <div>
            <h3 class="text-[10px] font-mono text-text-muted uppercase tracking-widest mb-2">Expected Result</h3>
            <div class="bg-status-success/5 border border-status-success/20 p-4 rounded">
              <pre class="text-sm font-mono text-status-success/90 whitespace-pre-wrap"><%= @template.expected_result %></pre>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Sidebar -->
  <div class="space-y-6">
    <!-- Template Info -->
    <div class="panel">
      <div class="panel-header">Template Info</div>
      <div class="p-4 space-y-4">
        <dl class="space-y-3 text-sm font-mono">
          <div class="flex justify-between">
            <dt class="text-text-muted uppercase text-[10px] tracking-wider">Created by</dt>
            <dd class="text-text-primary"><%= @template.user.display_name %></dd>
          </div>
          <div class="flex justify-between">
            <dt class="text-text-muted uppercase text-[10px] tracking-wider">Created</dt>
            <dd class="text-text-primary"><%= @template.created_at.strftime('%Y.%m.%d %H:%M') %></dd>
          </div>
          <div class="flex justify-between">
            <dt class="text-text-muted uppercase text-[10px] tracking-wider">Updated</dt>
            <dd class="text-text-primary"><%= @template.updated_at.strftime('%Y.%m.%d %H:%M') %></dd>
          </div>
        </dl>

        <!-- Action Buttons -->
        <div class="pt-4 border-t border-status-error/20 space-y-2">
          <% if policy(@project).update? %>
            <%= link_to edit_project_test_case_template_path(@project, @template), class: "flex items-center justify-center w-full px-4 py-2 bg-dark-surface-mid border border-primary/30 text-primary text-xs font-mono uppercase tracking-wider hover:bg-primary/10 transition-colors" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
              </svg>
              Modify Template
            <% end %>
            <%= button_to project_test_case_template_path(@project, @template), method: :delete, data: { confirm: 'Terminate this template?' }, class: "flex items-center justify-center w-full px-4 py-2 bg-status-error/10 border border-status-error/50 text-status-error text-xs font-mono uppercase tracking-wider hover:bg-status-error/20 transition-colors" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
              </svg>
              Terminate Template
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Navigation -->
    <div class="panel">
      <div class="panel-header">Navigation</div>
      <div class="p-4 space-y-1">
        <%= link_to project_test_case_templates_path(@project), class: "flex items-center px-3 py-2 text-text-primary/70 hover:text-primary hover:bg-dark-surface-mid transition-colors" do %>
          <svg class="w-4 h-4 mr-3 text-text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          <span class="text-xs font-mono uppercase tracking-wider">All Templates</span>
        <% end %>
        <%= link_to project_path(@project), class: "flex items-center px-3 py-2 text-text-primary/70 hover:text-primary hover:bg-dark-surface-mid transition-colors" do %>
          <svg class="w-4 h-4 mr-3 text-text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
          </svg>
          <span class="text-xs font-mono uppercase tracking-wider">Mission Overview</span>
        <% end %>
      </div>
    </div>
  </div>
</div>
