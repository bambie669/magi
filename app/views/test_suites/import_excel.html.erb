<% content_for :page_title, "IMPORT EXCEL PROTOCOLS" %>

<% content_for :breadcrumbs do %>
  <%= link_to @test_suite.project.name, project_path(@test_suite.project), class: "text-terminal-cyan hover:text-terminal-cyan/80" %>
  <span class="text-terminal-red mx-2">/</span>
  <%= link_to @test_suite.name, test_suite_path(@test_suite), class: "text-terminal-cyan hover:text-terminal-cyan/80" %>
  <span class="text-terminal-red mx-2">/</span>
  <span class="text-terminal-gray">Import Excel</span>
<% end %>

<div class="max-w-4xl mx-auto space-y-6">
  <% if @errors.present? %>
    <div class="nerv-panel border-terminal-red/50">
      <div class="nerv-panel-header text-terminal-red">Import Errors Detected</div>
      <div class="p-4">
        <ul class="list-disc list-inside text-sm font-mono text-terminal-red max-h-48 overflow-y-auto space-y-1">
          <% @errors.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
        <% if @imported_count && @imported_count > 0 %>
          <p class="mt-4 text-sm font-mono text-terminal-amber">
            <span class="text-terminal-cyan"><%= @imported_count %></span> protocols were imported successfully despite the errors.
          </p>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Upload Form -->
  <div class="nerv-panel">
    <div class="nerv-panel-header flex items-center justify-between">
      <span>IMPORT EXCEL PROTOCOL DATA</span>
      <span class="text-[10px] font-mono text-terminal-cyan">Bank: <%= @test_suite.name %></span>
    </div>

    <div class="p-6">
      <%= form_with url: process_import_excel_test_suite_path(@test_suite), method: :post, local: true, multipart: true, class: "space-y-6" do |form| %>
        <div>
          <label class="block text-[10px] font-mono text-terminal-amber uppercase tracking-wider mb-2">Select Excel File</label>
          <div class="relative">
            <input type="file" name="excel_file" accept=".xlsx,.xls" required
              class="input-nerv w-full px-4 py-3 text-sm file:mr-4 file:py-2 file:px-4 file:border-0 file:text-sm file:font-mono file:uppercase file:tracking-wider file:bg-terminal-green/20 file:text-terminal-green hover:file:bg-terminal-green/30 file:cursor-pointer">
          </div>
          <p class="mt-2 text-[10px] font-mono text-terminal-gray">Upload an Excel file (.xlsx or .xls) containing protocol data</p>
        </div>

        <div class="flex justify-end space-x-3 pt-6 border-t border-terminal-red/20">
          <%= link_to 'Abort', test_suite_path(@test_suite), class: "px-4 py-2 bg-nerv-purple-mid border border-terminal-gray-dark text-terminal-gray text-xs font-mono uppercase tracking-wider hover:text-terminal-white transition-colors" %>
          <%= form.submit "Import Data", class: "btn-nerv-primary cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Format Documentation -->
  <div class="nerv-panel">
    <div class="nerv-panel-header">EXCEL FORMAT SPECIFICATION</div>
    <div class="p-6 space-y-6">
      <p class="text-sm font-mono text-terminal-white/80">
        Excel files are imported with each sheet becoming a test scope (folder). Multiple sheets create a structured hierarchy.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <h3 class="text-[10px] font-mono text-terminal-amber uppercase tracking-widest mb-3">Expected Columns</h3>
          <ul class="space-y-2 text-sm font-mono text-terminal-white/80">
            <li><span class="text-terminal-green">Test Case Number</span> - ID (e.g., "1" or "TC 1")</li>
            <li><span class="text-terminal-green">Test Title</span> - Protocol designation</li>
            <li><span class="text-terminal-green">Test Steps</span> - Execution steps</li>
            <li><span class="text-terminal-green">Expected Results</span> - Expected outcome</li>
          </ul>
        </div>

        <div>
          <h3 class="text-[10px] font-mono text-terminal-amber uppercase tracking-widest mb-3">Optional Columns</h3>
          <ul class="space-y-2 text-sm font-mono text-terminal-white/80">
            <li><span class="text-terminal-green">Prerequisites</span> - Initial conditions</li>
            <li><span class="text-terminal-green">Actual Results</span> - Ignored during import</li>
            <li><span class="text-terminal-green">Results</span> - Test status (ignored)</li>
          </ul>
        </div>
      </div>

      <div>
        <h3 class="text-[10px] font-mono text-terminal-amber uppercase tracking-widest mb-3">Sheet Organization</h3>
        <div class="bg-nerv-black/50 border border-terminal-green/30 p-4">
          <ul class="space-y-2 text-sm font-mono text-terminal-white/80">
            <li><span class="text-terminal-green">Sheet Name</span> becomes the test scope (folder) name</li>
            <li>Section rows (single cell with text) create sub-scopes</li>
            <li>Summary sheets (named "Summary", "Overview", etc.) are skipped</li>
          </ul>
        </div>
      </div>

      <div>
        <h3 class="text-[10px] font-mono text-terminal-amber uppercase tracking-widest mb-3">Supported Formats</h3>
        <div class="flex space-x-4">
          <div class="px-4 py-2 bg-terminal-green/10 border border-terminal-green/30 text-terminal-green text-sm font-mono">
            .xlsx (Excel 2007+)
          </div>
          <div class="px-4 py-2 bg-terminal-green/10 border border-terminal-green/30 text-terminal-green text-sm font-mono">
            .xls (Legacy Excel)
          </div>
        </div>
      </div>

      <div class="p-4 bg-terminal-amber/10 border border-terminal-amber/30">
        <div class="flex items-center space-x-2">
          <svg class="w-5 h-5 text-terminal-amber" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span class="text-sm font-mono text-terminal-amber">System Note:</span>
        </div>
        <p class="mt-2 text-sm font-mono text-terminal-white/80">
          Test scopes will be created automatically based on sheet names. Test case IDs are normalized to "TC" prefix format (e.g., "1" becomes "TC1").
          Duplicate entries (same cypress_id or same title in scope) are automatically skipped.
        </p>
      </div>
    </div>
  </div>
</div>
