<aside class="sidebar-dark">
  <!-- Logo Section -->
  <div class="p-4 border-b border-theme">
    <%= link_to authenticated_root_path, class: "block" do %>
      <div class="flex flex-col items-center">
        <div class="w-16 h-16 flex items-center justify-center bg-primary-muted rounded-lg border border-primary mb-2">
          <span class="text-2xl font-mono font-bold text-primary-light">MQ</span>
        </div>
        <span class="text-accent font-mono text-lg font-bold tracking-widest">MAGI QA</span>
        <span class="text-theme-muted text-[10px] font-mono tracking-wider mt-1">Test Management</span>
      </div>
    <% end %>
  </div>

  <!-- Divider -->
  <div class="sidebar-divider"></div>

  <!-- Main Navigation -->
  <nav class="flex-1 p-4">
    <div class="sidebar-section-title">Navigation</div>
    <ul class="space-y-1">
      <li>
        <% active = current_page?(dashboard_path) %>
        <%= link_to dashboard_path, class: "nav-link #{active ? 'nav-link-active' : ''}" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
          <span>Dashboard</span>
        <% end %>
      </li>
      <li>
        <% active = request.path.include?('test_runs') %>
        <%= link_to test_runs_path, class: "nav-link #{active ? 'nav-link-active' : ''}" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span>Test Runs</span>
        <% end %>
      </li>
      <li>
        <% active = request.path == '/projects' %>
        <%= link_to projects_path, class: "nav-link #{active ? 'nav-link-active' : ''}" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>
          </svg>
          <span>Projects</span>
        <% end %>
      </li>
      <li>
        <% active = request.path.include?('analysis') %>
        <%= link_to analysis_path, class: "nav-link #{active ? 'nav-link-active' : ''}" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
          <span>Analysis</span>
        <% end %>
      </li>
      <li>
        <% active = request.path.include?('system_config') %>
        <%= link_to system_config_path, class: "nav-link #{active ? 'nav-link-active' : ''}" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          <span>Settings</span>
        <% end %>
      </li>
    </ul>

    <!-- Divider -->
    <div class="sidebar-divider my-6"></div>

    <!-- Projects Section -->
    <div class="sidebar-section-title">Recent Projects</div>
    <ul class="space-y-1">
      <% if user_signed_in? && current_user.projects.any? %>
        <% current_user.projects.limit(5).each do |project| %>
          <li>
            <% active = @project&.id == project.id %>
            <%= link_to project_path(project), class: "flex items-center space-x-3 px-3 py-2 font-mono text-xs transition-all #{active ? 'text-accent' : 'text-theme-secondary hover:text-theme-primary'}" do %>
              <span class="w-1.5 h-1.5 rounded-full <%= active ? 'bg-primary animate-pulse' : 'bg-primary-muted' %>"></span>
              <span class="truncate"><%= project.name %></span>
            <% end %>
          </li>
        <% end %>
      <% end %>
      <li>
        <%= link_to new_project_path, class: "flex items-center space-x-3 px-3 py-2 font-mono text-xs text-primary hover:text-primary-light transition-all" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
          </svg>
          <span class="uppercase tracking-wider">New Project</span>
        <% end %>
      </li>
    </ul>
  </nav>

  <!-- Divider -->
  <div class="sidebar-divider"></div>

  <!-- User Section -->
  <% if user_signed_in? %>
    <div class="p-4 bg-theme-elevated">
      <div class="flex items-center space-x-3">
        <div class="avatar avatar-md avatar-dark">
          <%= current_user.display_name.first.upcase %>
        </div>
        <div class="flex-1 min-w-0">
          <p class="text-[10px] font-mono text-theme-muted uppercase tracking-wider">User</p>
          <p class="text-xs font-mono text-theme-primary truncate"><%= current_user.display_name %></p>
          <p class="text-[10px] font-mono text-accent uppercase tracking-wider">Role: <%= current_user.role.upcase %></p>
        </div>
        <%= button_to destroy_user_session_path, method: :delete, class: "p-2 text-theme-muted hover:text-accent transition-colors", title: "Sign Out" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
          </svg>
        <% end %>
      </div>
    </div>
  <% end %>
</aside>
