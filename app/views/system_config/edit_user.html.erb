<% content_for :page_title, "Edit User" %>

<% content_for :breadcrumbs do %>
  <%= link_to "Settings", system_config_path, class: "text-primary hover:text-primary/80" %>
  <span class="text-text-muted mx-2">/</span>
  <%= link_to "Users", system_config_path(section: 'operators'), class: "text-primary hover:text-primary/80" %>
  <span class="text-text-muted mx-2">/</span>
  <span class="text-text-muted">Edit</span>
<% end %>

<div class="max-w-2xl mx-auto">
  <div class="panel">
    <div class="panel-header">
      <span>Edit User: <%= @user.email %></span>
    </div>
    <div class="p-6">
      <%= form_with model: @user, url: update_operator_path(@user), method: :patch, local: true do |f| %>
        <% if @user.errors.any? %>
          <div class="mb-6 p-4 border border-status-error/50 bg-status-error/10">
            <p class="text-sm font-mono text-status-error uppercase mb-2">Update Failed:</p>
            <ul class="list-disc list-inside text-xs font-mono text-status-error">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="space-y-6">
          <div>
            <label class="block text-[10px] font-mono text-text-muted uppercase tracking-wider mb-2">
              Email
            </label>
            <%= f.email_field :email, class: "input-field w-full" %>
          </div>

          <div>
            <label class="block text-[10px] font-mono text-text-muted uppercase tracking-wider mb-2">
              Role
            </label>
            <%= f.select :role, User.roles.keys.map { |r| [r.titleize, r] }, {}, class: "input-field w-full" %>
          </div>

          <div class="p-4 border border-dark-border bg-dark-surface/50 rounded">
            <p class="text-xs font-mono text-text-muted mb-4">
              Leave password fields blank to keep current password.
            </p>

            <div class="space-y-4">
              <div>
                <label class="block text-[10px] font-mono text-text-muted uppercase tracking-wider mb-2">
                  New Password (Optional)
                </label>
                <%= f.password_field :password, class: "input-field w-full", placeholder: "Leave blank to keep current" %>
              </div>

              <div>
                <label class="block text-[10px] font-mono text-text-muted uppercase tracking-wider mb-2">
                  Confirm New Password
                </label>
                <%= f.password_field :password_confirmation, class: "input-field w-full" %>
              </div>
            </div>
          </div>

          <div class="flex items-center justify-between pt-4 border-t border-dark-border">
            <%= link_to system_config_path(section: 'operators'), class: "text-text-muted hover:text-primary font-mono text-sm uppercase" do %>
              Cancel
            <% end %>
            <%= f.submit "Save Changes", class: "btn-primary cursor-pointer" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
