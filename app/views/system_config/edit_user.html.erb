<% content_for :page_title, "MODIFY OPERATOR" %>

<% content_for :breadcrumbs do %>
  <%= link_to "System Config", system_config_path, class: "text-terminal-cyan hover:text-terminal-cyan/80" %>
  <span class="text-terminal-red mx-2">/</span>
  <%= link_to "Operators", system_config_path(section: 'operators'), class: "text-terminal-cyan hover:text-terminal-cyan/80" %>
  <span class="text-terminal-red mx-2">/</span>
  <span class="text-terminal-gray">Modify</span>
<% end %>

<div class="max-w-2xl mx-auto">
  <div class="nerv-panel">
    <div class="nerv-panel-header">
      <span>MODIFY OPERATOR: <%= @user.email %></span>
    </div>
    <div class="p-6">
      <%= form_with model: @user, url: update_operator_path(@user), method: :patch, local: true do |f| %>
        <% if @user.errors.any? %>
          <div class="mb-6 p-4 border border-terminal-red/50 bg-terminal-red/10">
            <p class="text-sm font-mono text-terminal-red uppercase mb-2">Update Failed:</p>
            <ul class="list-disc list-inside text-xs font-mono text-terminal-red">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="space-y-6">
          <div>
            <label class="block text-[10px] font-mono text-terminal-amber uppercase tracking-wider mb-2">
              Operator ID (Email)
            </label>
            <%= f.email_field :email, class: "input-nerv w-full" %>
          </div>

          <div>
            <label class="block text-[10px] font-mono text-terminal-amber uppercase tracking-wider mb-2">
              Clearance Level
            </label>
            <%= f.select :role, User.roles.keys.map { |r| [r.titleize, r] }, {}, class: "input-nerv w-full" %>
          </div>

          <div class="p-4 border border-terminal-amber/30 bg-terminal-amber/5">
            <p class="text-xs font-mono text-terminal-amber mb-4">
              Leave password fields blank to keep current access code.
            </p>

            <div class="space-y-4">
              <div>
                <label class="block text-[10px] font-mono text-terminal-amber uppercase tracking-wider mb-2">
                  New Access Code (Optional)
                </label>
                <%= f.password_field :password, class: "input-nerv w-full", placeholder: "Leave blank to keep current" %>
              </div>

              <div>
                <label class="block text-[10px] font-mono text-terminal-amber uppercase tracking-wider mb-2">
                  Confirm New Access Code
                </label>
                <%= f.password_field :password_confirmation, class: "input-nerv w-full" %>
              </div>
            </div>
          </div>

          <div class="flex items-center justify-between pt-4 border-t border-terminal-red/20">
            <%= link_to system_config_path(section: 'operators'), class: "text-terminal-gray hover:text-terminal-cyan font-mono text-sm uppercase" do %>
              Cancel
            <% end %>
            <%= f.submit "Update Operator", class: "btn-nerv-primary cursor-pointer" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
