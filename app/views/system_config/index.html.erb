<% content_for :page_title, "SYSTEM CONFIG" %>

<div class="space-y-6">
  <!-- Config Navigation -->
  <div class="nerv-panel">
    <div class="nerv-panel-header">
      <span>SYSTEM CONFIGURATION</span>
    </div>
    <div class="p-4">
      <nav class="flex flex-wrap gap-2">
        <%= link_to system_config_path(section: 'theme'),
            class: "px-4 py-2 font-mono text-sm uppercase tracking-wider transition-colors #{ @section == 'theme' ? 'bg-terminal-cyan/20 text-terminal-cyan border border-terminal-cyan' : 'text-terminal-gray hover:text-terminal-cyan border border-terminal-gray/30 hover:border-terminal-cyan/30' }" do %>
          <div class="flex items-center space-x-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
            </svg>
            <span>Theme</span>
          </div>
        <% end %>

        <% if current_user.admin? %>
          <%= link_to system_config_path(section: 'operators'),
              class: "px-4 py-2 font-mono text-sm uppercase tracking-wider transition-colors #{ @section == 'operators' ? 'bg-terminal-cyan/20 text-terminal-cyan border border-terminal-cyan' : 'text-terminal-gray hover:text-terminal-cyan border border-terminal-gray/30 hover:border-terminal-cyan/30' }" do %>
            <div class="flex items-center space-x-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
              </svg>
              <span>Operators</span>
            </div>
          <% end %>
        <% end %>

        <%= link_to system_config_path(section: 'documentation'),
            class: "px-4 py-2 font-mono text-sm uppercase tracking-wider transition-colors #{ @section == 'documentation' ? 'bg-terminal-cyan/20 text-terminal-cyan border border-terminal-cyan' : 'text-terminal-gray hover:text-terminal-cyan border border-terminal-gray/30 hover:border-terminal-cyan/30' }" do %>
          <div class="flex items-center space-x-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            <span>Documentation</span>
          </div>
        <% end %>

        <%= link_to system_config_path(section: 'glossary'),
            class: "px-4 py-2 font-mono text-sm uppercase tracking-wider transition-colors #{ @section == 'glossary' ? 'bg-terminal-cyan/20 text-terminal-cyan border border-terminal-cyan' : 'text-terminal-gray hover:text-terminal-cyan border border-terminal-gray/30 hover:border-terminal-cyan/30' }" do %>
          <div class="flex items-center space-x-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
            </svg>
            <span>Glossary</span>
          </div>
        <% end %>

        <%= link_to system_config_path(section: 'api_tokens'),
            class: "px-4 py-2 font-mono text-sm uppercase tracking-wider transition-colors #{ @section == 'api_tokens' ? 'bg-terminal-cyan/20 text-terminal-cyan border border-terminal-cyan' : 'text-terminal-gray hover:text-terminal-cyan border border-terminal-gray/30 hover:border-terminal-cyan/30' }" do %>
          <div class="flex items-center space-x-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
            </svg>
            <span>API Tokens</span>
          </div>
        <% end %>
      </nav>
    </div>
  </div>

  <!-- Section Content -->
  <% case @section %>
  <% when 'theme' %>
    <%= render 'theme_section' %>
  <% when 'operators' %>
    <% if current_user.admin? %>
      <%= render 'operators_section' %>
    <% end %>
  <% when 'documentation' %>
    <%= render 'documentation_section' %>
  <% when 'glossary' %>
    <%= render 'glossary_section' %>
  <% when 'api_tokens' %>
    <%= render 'api_tokens_section' %>
  <% end %>
</div>
