<% content_for :page_title, "INITIALIZE OPERATOR" %>

<% content_for :breadcrumbs do %>
  <%= link_to "System Config", system_config_path, class: "text-terminal-cyan hover:text-terminal-cyan/80" %>
  <span class="text-terminal-red mx-2">/</span>
  <%= link_to "Operators", system_config_path(section: 'operators'), class: "text-terminal-cyan hover:text-terminal-cyan/80" %>
  <span class="text-terminal-red mx-2">/</span>
  <span class="text-terminal-gray">Initialize</span>
<% end %>

<div class="max-w-2xl mx-auto">
  <div class="nerv-panel">
    <div class="nerv-panel-header">
      <span>INITIALIZE NEW OPERATOR</span>
    </div>
    <div class="p-6">
      <%= form_with model: @user, url: create_operator_path, local: true do |f| %>
        <% if @user.errors.any? %>
          <div class="mb-6 p-4 border border-terminal-red/50 bg-terminal-red/10">
            <p class="text-sm font-mono text-terminal-red uppercase mb-2">Initialization Failed:</p>
            <ul class="list-disc list-inside text-xs font-mono text-terminal-red">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="space-y-6">
          <div>
            <label class="block text-[10px] font-mono text-terminal-amber uppercase tracking-wider mb-2">
              Operator ID (Email)
            </label>
            <%= f.email_field :email, class: "input-nerv w-full", placeholder: "operator@nerv.org", autofocus: true %>
          </div>

          <div>
            <label class="block text-[10px] font-mono text-terminal-amber uppercase tracking-wider mb-2">
              Clearance Level
            </label>
            <%= f.select :role, User.roles.keys.map { |r| [r.titleize, r] }, {}, class: "input-nerv w-full" %>
          </div>

          <div>
            <label class="block text-[10px] font-mono text-terminal-amber uppercase tracking-wider mb-2">
              Access Code (Password)
            </label>
            <%= f.password_field :password, class: "input-nerv w-full", placeholder: "Minimum 6 characters" %>
          </div>

          <div>
            <label class="block text-[10px] font-mono text-terminal-amber uppercase tracking-wider mb-2">
              Confirm Access Code
            </label>
            <%= f.password_field :password_confirmation, class: "input-nerv w-full" %>
          </div>

          <div class="flex items-center justify-between pt-4 border-t border-terminal-red/20">
            <%= link_to system_config_path(section: 'operators'), class: "text-terminal-gray hover:text-terminal-cyan font-mono text-sm uppercase" do %>
              Cancel
            <% end %>
            <%= f.submit "Initialize Operator", class: "btn-nerv-primary cursor-pointer" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
