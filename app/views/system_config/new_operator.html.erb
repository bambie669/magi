<% content_for :page_title, "Add User" %>

<% content_for :breadcrumbs do %>
  <%= link_to "Settings", system_config_path, class: "text-primary hover:text-primary/80" %>
  <span class="text-text-muted mx-2">/</span>
  <%= link_to "Users", system_config_path(section: 'operators'), class: "text-primary hover:text-primary/80" %>
  <span class="text-text-muted mx-2">/</span>
  <span class="text-text-muted">Add</span>
<% end %>

<div class="max-w-2xl mx-auto">
  <div class="panel">
    <div class="panel-header">
      <span>Add New User</span>
    </div>
    <div class="p-6">
      <%= form_with model: @user, url: create_operator_path, local: true do |f| %>
        <% if @user.errors.any? %>
          <div class="mb-6 p-4 border border-status-error/50 bg-status-error/10 rounded">
            <p class="text-sm font-mono text-status-error uppercase mb-2">Error:</p>
            <ul class="list-disc list-inside text-xs font-mono text-status-error">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="space-y-6">
          <div>
            <label class="block text-[10px] font-mono text-text-muted uppercase tracking-wider mb-2">
              Email
            </label>
            <%= f.email_field :email, class: "input-field w-full", placeholder: "user@company.com", autofocus: true %>
          </div>

          <div>
            <label class="block text-[10px] font-mono text-text-muted uppercase tracking-wider mb-2">
              Role
            </label>
            <%= f.select :role, User.roles.keys.map { |r| [r.titleize, r] }, {}, class: "input-field w-full" %>
          </div>

          <div>
            <label class="block text-[10px] font-mono text-text-muted uppercase tracking-wider mb-2">
              Password
            </label>
            <%= f.password_field :password, class: "input-field w-full", placeholder: "Minimum 6 characters" %>
          </div>

          <div>
            <label class="block text-[10px] font-mono text-text-muted uppercase tracking-wider mb-2">
              Confirm Password
            </label>
            <%= f.password_field :password_confirmation, class: "input-field w-full" %>
          </div>

          <div class="flex items-center justify-between pt-4 border-t border-dark-border">
            <%= link_to system_config_path(section: 'operators'), class: "text-text-muted hover:text-primary font-mono text-sm uppercase" do %>
              Cancel
            <% end %>
            <%= f.submit "Add User", class: "btn-primary cursor-pointer" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
