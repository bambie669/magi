<div class="panel">
  <div class="panel-header">
    <span>Theme Settings</span>
  </div>
  <div class="p-6">
    <p class="text-sm font-mono text-theme-secondary mb-6">
      Select your preferred theme. Changes will take effect immediately.
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Dark Theme -->
      <%= form_with url: update_theme_path, method: :patch, local: true, class: "block" do %>
        <input type="hidden" name="theme" value="nerv">
        <button type="submit" class="w-full text-left group">
          <div class="p-6 rounded-lg border-2 transition-all duration-200 <%= current_user.theme == 'nerv' ? 'border-primary bg-primary/10' : 'border-dark-border hover:border-primary' %>">
            <!-- Preview -->
            <div class="mb-4 p-4 bg-dark-base border border-dark-border rounded">
              <div class="flex items-center space-x-2 mb-3">
                <div class="w-3 h-3 bg-primary rounded-full"></div>
                <div class="w-3 h-3 bg-status-warning rounded-full"></div>
                <div class="w-3 h-3 bg-accent rounded-full"></div>
              </div>
              <div class="space-y-2">
                <div class="h-2 w-3/4 bg-primary/40 rounded"></div>
                <div class="h-2 w-1/2 bg-text-secondary/40 rounded"></div>
                <div class="h-2 w-2/3 bg-status-warning/40 rounded"></div>
              </div>
            </div>

            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-lg font-mono text-theme-primary uppercase tracking-wider">Dark Mode</h3>
                <p class="text-xs font-mono text-theme-secondary mt-1">Professional dark interface</p>
              </div>
              <% if current_user.theme == 'nerv' %>
                <span class="badge badge-success">
                  Active
                </span>
              <% end %>
            </div>
          </div>
        </button>
      <% end %>

      <!-- Light Theme -->
      <%= form_with url: update_theme_path, method: :patch, local: true, class: "block" do %>
        <input type="hidden" name="theme" value="light">
        <button type="submit" class="w-full text-left group">
          <div class="p-6 rounded-lg border-2 transition-all duration-200 <%= current_user.theme == 'light' ? 'border-primary bg-primary/10' : 'border-dark-border hover:border-primary' %>">
            <!-- Preview -->
            <div class="mb-4 p-4 bg-white border border-light-border rounded">
              <div class="flex items-center space-x-2 mb-3">
                <div class="w-3 h-3 bg-primary rounded-full"></div>
                <div class="w-3 h-3 bg-status-warning rounded-full"></div>
                <div class="w-3 h-3 bg-accent rounded-full"></div>
              </div>
              <div class="space-y-2">
                <div class="h-2 w-3/4 bg-primary/50 rounded"></div>
                <div class="h-2 w-1/2 bg-light-gray/30 rounded"></div>
                <div class="h-2 w-2/3 bg-status-warning/50 rounded"></div>
              </div>
            </div>

            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-lg font-mono text-theme-primary uppercase tracking-wider">Light Mode</h3>
                <p class="text-xs font-mono text-theme-secondary mt-1">Clean light interface</p>
              </div>
              <% if current_user.theme == 'light' %>
                <span class="px-3 py-1 bg-primary/20 text-primary text-xs font-mono uppercase border border-primary rounded">
                  Active
                </span>
              <% end %>
            </div>
          </div>
        </button>
      <% end %>
    </div>
  </div>
</div>
